<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarStyle.TextView</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="MyActionBarStyle.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
